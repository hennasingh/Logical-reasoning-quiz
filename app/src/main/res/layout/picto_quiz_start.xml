<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include android:id="@+id/titlebar"
            layout="@layout/titlebar_picto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question1"
                style="@style/TextStyle"
                android:text="@string/pictoword_question" />
            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/ques1"
                />

            <LinearLayout style="@style/WrapContentStyle"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/picto_layout_marginB">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/fire"
                    android:layout_marginLeft="@dimen/picto_img_marginL"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/picto_plusText_size"
                    android:layout_margin="@dimen/picto_plus_margin"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/dog"
                    android:layout_marginRight="@dimen/picto_img_marginR"/>

            </LinearLayout>

            <TextView
                android:id="@+id/question2"
                style="@style/TextStyle"
                android:text="@string/pictoword_question" />
            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/ques2"
                />

            <LinearLayout style="@style/WrapContentStyle"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/picto_layout_marginB">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/cup"
                    android:layout_marginLeft="@dimen/picto_img_marginL"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/picto_plusText_size"
                    android:layout_margin="@dimen/picto_plus_margin"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/cake"
                    android:layout_marginRight="@dimen/picto_img_marginR"/>

            </LinearLayout>

            <TextView
                android:id="@+id/question3"
                style="@style/TextStyle"
                android:text="@string/pictoword_question" />
            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/ques3"
                />

            <LinearLayout style="@style/WrapContentStyle"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/picto_layout_marginB">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/ice"
                    android:layout_marginLeft="@dimen/picto_img_marginL"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/picto_plusText_size"
                    android:layout_margin="@dimen/picto_plus_margin"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/box"
                    android:layout_marginRight="@dimen/picto_img_marginR"/>

            </LinearLayout>

            <TextView
                android:id="@+id/question4"
                style="@style/TextStyle"
                android:text="@string/pictoword_question" />
            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/ques4"
                />

            <LinearLayout style="@style/WrapContentStyle"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/picto_layout_marginB">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/jelly"
                    android:layout_marginLeft="@dimen/picto_img_marginL"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/picto_plusText_size"
                    android:layout_margin="@dimen/picto_plus_margin"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/fish"
                    android:layout_marginRight="@dimen/picto_img_marginR"/>

            </LinearLayout>

            <TextView
                android:id="@+id/question5"
                style="@style/TextStyle"
                android:text="@string/pictoword_question" />
            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/ques5"
                />

            <LinearLayout style="@style/WrapContentStyle"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/picto_layout_marginB">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/hand"
                    android:layout_marginLeft="@dimen/picto_img_marginL"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/picto_plusText_size"
                    android:layout_margin="@dimen/picto_plus_margin"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:src="@drawable/shake"
                    android:layout_marginRight="@dimen/picto_img_marginR"/>

            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:layout_width="@dimen/submit_width"
                android:layout_height="@dimen/submit_height"
                android:contentDescription="@string/submit"
                android:src="@drawable/submit"
                android:onClick="showScore"
                android:scaleType="fitXY"
                android:background="@color/submitbg"
                android:layout_marginTop="@dimen/category_marginTop"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</layout>
